@page "/report/summary/email/{date:DateTime}"
@model EmailModel
@{
    ViewData["Title"] = $"Summary Email for {Model.Date:MMMM d}";
}

<div class="container">
    <form id="email-form"
          name="email-form"
          role="form"
          method="post">

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Message.To">To <required /></label>
                <input asp-for="Message.To"
                       type="email"
                       class="form-control"
                       placeholder="To" />
                <span asp-validation-for="Message.To" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Message.ReplyTo">From <required /></label>
                <input asp-for="Message.ReplyTo"
                       type="email"
                       class="form-control"
                       placeholder="From" />
                <span asp-validation-for="Message.ReplyTo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Message.Subject">Subject <required /></label>
            <input asp-for="Message.Subject"
                   type="text"
                   class="form-control"
                   placeholder="Subject" />
            <span asp-validation-for="Message.Subject" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Message.HtmlBody">Message</label>
            <textarea id="Message_HtmlBody"
                      name="Message.HtmlBody"
                      rows="5"
                      class="form-control"
                      placeholder="Message"><partial name="_Content" model="Model" /></textarea>
            <span asp-validation-for="Message.HtmlBody" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col">
                <button id="send-button"
                        type="submit"
                        class="btn btn-primary">
                    Send
                </button>
                <a id="cancel-button"
                   asp-page="/report/summary/index"
                   asp-route-tenant="@Model.TenantRoute"
                   asp-route-date="@Model.Date.ToString("yyyy-MM-dd")"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/5.0.16/tinymce.min.js"
            integrity="sha256-DwA/5XvQk7JerRG73GsRcEUM+ESubaliT2xRpDtIKNA="
            crossorigin="anonymous"></script>
    <script>
        tinymce.init({
            selector: '#Message_HtmlBody',
            height: 500,
            plugins: [
                'autolink lists link image charmap',
                'visualblocks code imagetools',
                'table paste code wordcount quickbars'
            ],
            toolbar: 'undo redo | formatselect | bold italic underline | forecolor | link image | alignleft aligncenter alignright alignjustify | bullist numlist | table | removeformat',
            menubar: false,
            browser_spellcheck: true,
            relative_urls: false,
            contextmenu: false
        });
    </script>
}